{
  "id": "jd.cookie.uploader",
  "name": "京东Cookie上传器", 
  "author": "@Winencey",
  "repo": "https://github.com/Winencey/jd_boxjs",
  "apps": [
    {
      "id": "qinglong_config", 
      "name": "青龙面板配置",
      "author": "@Winencey",
      "descs_html": [
        "配置青龙面板连接信息，用于自动上传京东Cookie"
      ],
      "scripts": [
        {
          "name": "京东Cookie上传",
          "script": "https://raw.githubusercontent.com/Winencey/jd_boxjs/main/scripts/ck.js"
        }
      ],
      "keys": [
        "@ql.address",
        "@ql.client_id", 
        "@ql.client_secret",
        "@ql.limit_count",
        "@ql.auto_upload", 
        "@ql.notify_enabled"
      ],
      "settings": [
        {
          "id": "@ql.auto_upload",
          "name": "自动上传",
          "val": true,
          "type": "boolean", 
          "desc": "启用后自动将获取的Cookie上传到青龙面板"
        },
        {
          "id": "@ql.notify_enabled",
          "name": "启用通知", 
          "val": true,
          "type": "boolean",
          "desc": "上传成功或失败时发送通知"
        },
        {
          "id": "@ql.address",
          "name": "青龙地址",
          "val": "", 
          "type": "text",
          "placeholder": "http://ip:port",
          "desc": "青龙面板的访问地址"
        },
        {
          "id": "@ql.client_id",
          "name": "Client ID",
          "val": "",
          "type": "text",
          "desc": "青龙面板的客户端ID"
        },
        {
          "id": "@ql.client_secret",
          "name": "Client Secret", 
          "val": "",
          "type": "text",
          "desc": "青龙面板的客户端密钥"
        },
        {
          "id": "@ql.limit_count",
          "name": "最大CK数量",
          "val": "999",
          "type": "text",
          "desc": "单个容器允许的最大Cookie数量"
        }
      ]
    },
    {
      "id": "cookie_view", 
      "name": "Cookie查看",
      "author": "@Winencey",
      "descs_html": [
        "查看最新获取的Cookie内容"
      ],
      "keys": [
        "@cookie.last_ck",
        "@cookie.last_time"
      ],
      "settings": [
        {
          "id": "@cookie.last_ck",
          "name": "最新Cookie",
          "val": "",
          "type": "textarea", 
          "rows": 3,
          "readonly": true,
          "desc": "最近成功获取的Cookie内容"
        },
        {
          "id": "@cookie.last_time",
          "name": "获取时间",
          "val": "", 
          "type": "text",
          "readonly": true,
          "desc": "Cookie获取时间"
        }
      ]
    }
  ]
}
